{
  "env": {
    "commonjs": true,
    "es6": true,
    "node": true
  },
  "extends": "eslint:recommended",
  "globals": {
    "Atomics": "readonly",
    "SharedArrayBuffer": "readonly"
  },
  "parserOptions": {
    "ecmaVersion": 2018,
    "sourceType" : "module"
  },
  "rules": {
    "indent": 0,
    "quotes": 1,
    "semi": 2,
    "jsx-a11y/anchor-is-valid": 0,
    "jsx-a11y/anchor-is-invalid": 0,
    "no-unused-vars": 0,
    "no-console": 0,
    "no-useless-escape": 0,
    "linebreak-style": [2, "windows"]
  }
}
